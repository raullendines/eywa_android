<?xml version="1.0" encoding="utf-8"?>


    <com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/startCard"
        android:transitionName="achievement_card"
        android:transitionGroup="true"
        android:layout_width="100dp"
        android:layout_height="200dp"
        app:cardCornerRadius="25dp"
        android:theme="@style/Theme.Eywa_android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            >

            <ImageView
                android:id="@+id/imageAchievement"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:src="@drawable/trophy"
                />

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="TITLE"
                android:textColor="@color/purple_eywa"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/textDescription"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="lorem ipsum aetrohnaeotinhboeno"
                android:gravity="center"
                android:textSize="10sp"
                android:textColor="@color/purple_eywa"
                />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
