<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo_eywa">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/white"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    >

                    <LinearLayout
                        android:id="@+id/btnLangMenu"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:layout_marginLeft="50dp"
                        >
                        <ImageView
                            android:id="@+id/imageBandera"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/english_bandera"/>
                        <TextView
                            android:id="@+id/txtLang"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:text="ENG"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textSize="30sp"/>
                    </LinearLayout>
                </LinearLayout>



                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:src="@drawable/logo_eywa"
                    android:contentDescription="TODO" />
                <ImageButton
                    android:id="@+id/changeVolume"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_volume_on_24"
                    android:background="@color/white"

                    />
                <ImageButton
                    android:id="@+id/userMenu"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_person_24"
                    android:background="@color/white"

                    />


            </LinearLayout>

    </LinearLayout>

                <fragment
                    android:id="@+id/nav_host_fragment_container_main"
                    android:tag="myfragment"
                    android:name="androidx.navigation.fragment.NavHostFragment"
                    android:layout_marginTop="100dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:defaultNavHost="true"
                    app:navGraph="@navigation/my_main_nav"
                    />


        <LinearLayout
            android:id="@+id/backgroundOpacity"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#40000000"
            android:visibility="invisible"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:id="@+id/goBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:visibility="invisible"
            />

        <com.google.android.material.card.MaterialCardView
            android:layout_marginTop="120dp"
            android:layout_marginLeft="50dp"
            android:id="@+id/end_card"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:visibility="gone"
            android:theme="@style/Theme.Eywa_android"
            >


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                >

                <LinearLayout
                    android:id="@+id/catalanLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:clickable="true"
                    >

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/catalunya_bandera"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/txtView1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="Català"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/espanyolLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:clickable="true"
                    >

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/espanya_bandera"
                        android:layout_gravity="center"/>
                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="Español"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/englishLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:clickable="true"
                    >

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/english_bandera"
                        android:layout_gravity="center"/>
                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="English"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        />
                </LinearLayout>

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_marginTop="120dp"
            android:layout_marginRight="25dp"
            android:layout_gravity="right"
            android:id="@+id/end_card_user"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:visibility="gone"
            android:theme="@style/Theme.Eywa_android"
            >


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                >

                <LinearLayout
                    android:id="@+id/userLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:clickable="true"
                    >

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_usericon"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/txtViewUser"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="User"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/settingsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:clickable="true"
                    >

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_baseline_settings_24"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="Settings"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/logoutLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:clickable="true"
                    >

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_logout"
                        android:layout_gravity="center"/>
                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="Logout"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        />
                </LinearLayout>

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>