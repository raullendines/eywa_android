<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/layoutCrown"
               motion:framePosition="100"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/layoutTop"
               motion:framePosition="100"
               android:alpha="0.0"
               android:scaleY="0"
               android:scaleX="0" />
       </KeyFrameSet>
        <OnSwipe motion:touchAnchorId="@+id/linearLayout11" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            motion:layout_editor_absoluteY="20dp"
            android:layout_height="1dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:id="@+id/layoutCrown" />
        <Constraint
            motion:layout_editor_absoluteY="41dp"
            android:layout_height="1dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:id="@+id/layoutTop" />
        <Constraint
            android:layout_height="500dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:id="@+id/linearLayout11"
            motion:layout_constraintTop_toBottomOf="@+id/layoutTop"
            motion:layout_editor_absoluteY="101dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp" />
    </ConstraintSet>
</MotionScene>